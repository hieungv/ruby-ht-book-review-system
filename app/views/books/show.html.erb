      </div>
      <div class="col-lg-4 ">
        <div class="reviews">
        <h1 class="review_title"><%= @book.title %></h1>
          <%= render @book.reviews %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('.review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });

$('#rating-form').raty({
  path: '/assets/',
  scoreName: 'review[rate]'
  });

$('.average-review-rating').raty({
  readOnly: true,
  path: '/assets/',
  score: function() {
    return $(this).attr('data-score')
  }
});
</script>
